<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/project_horizontal_margin"
    android:paddingRight="@dimen/project_horizontal_margin"
    android:paddingTop="@dimen/project_vertical_margin"
    android:paddingBottom="@dimen/project_vertical_margin"
    tools:context="com.myselfapps.rav.slovarik.Verbs_activity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/plus"
        fab:fab_colorNormal="@color/primary_floating"
        fab:fab_colorPressed="@color/primary_pressed_floating"
        fab:fab_colorRipple="@color/ripple_material_dark" />

</RelativeLayout>
