<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:padding="@dimen/abc_dialog_list_padding_vertical_material">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog1_et_newWord"
        android:layout_margin="@dimen/abc_dialog_list_padding_vertical_material" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/abc_dialog_list_padding_vertical_material"
        android:paddingRight="@dimen/abc_dialog_list_padding_vertical_material"
        android:paddingTop="@dimen/abc_dialog_list_padding_vertical_material">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_Cancel"
            android:id="@+id/dialog1_btn_cancel"
            android:layout_marginLeft="@dimen/abc_dialog_list_padding_vertical_material"
            android:layout_marginTop="@dimen/abc_dialog_list_padding_vertical_material"
            android:layout_marginRight="@dimen/abc_dialog_list_padding_vertical_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_Save"
            android:id="@+id/dialog1_btn_save"
            android:layout_marginLeft="@dimen/abc_dialog_list_padding_vertical_material"
            android:layout_marginTop="@dimen/abc_dialog_list_padding_vertical_material"
            android:layout_marginRight="@dimen/abc_dialog_list_padding_vertical_material" />
    </LinearLayout>
</LinearLayout>